<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="550.0" prefWidth="750.0" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.DangKyHocPhanController">
   <top>
      <VBox alignment="CENTER" spacing="10.0">
         <children>
            <Label styleClass="title-label" text="ĐĂNG KÝ HỌC PHẦN" />
            <HBox alignment="CENTER" spacing="10.0">
               <children>
                  <Label text="Sinh viên:" />
                  <Label fx:id="lblStudentInfo" style="-fx-font-weight: bold;" text="[Mã SV]" />
                  <Label text="  |  Chọn đợt đăng ký:" />
                  <ComboBox fx:id="cbKyHoc" onAction="#handleKyHocChange" prefWidth="200.0" promptText="Chọn kỳ học..." />
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="10.0" left="15.0" right="15.0" top="15.0" />
         </padding>
      </VBox>
   </top>
   <center>
      <HBox alignment="CENTER" spacing="20.0">
         <children>
            <!-- Available Courses -->
            <VBox alignment="TOP_CENTER" spacing="5.0" HBox.hgrow="ALWAYS">
               <children>
                  <Label style="-fx-font-weight: bold;" text="Môn ĐƯỢC MỞ lớp kỳ này:" />
                  <ListView fx:id="lvAvailableCourses" VBox.vgrow="ALWAYS" />
               </children>
            </VBox>
            <!-- Buttons -->
            <VBox alignment="CENTER" spacing="15.0">
               <children>
                  <Button fx:id="btnRegister" mnemonicParsing="false" onAction="#handleRegister" prefWidth="100.0" styleClass="button-success" text="Đăng ký &gt;&gt;" />
                  <Button fx:id="btnUnregister" mnemonicParsing="false" onAction="#handleUnregister" prefWidth="100.0" styleClass="button-danger" text="&lt;&lt; Hủy ĐK" />
               </children>
            </VBox>
            <!-- Registered Courses -->
            <VBox alignment="TOP_CENTER" spacing="5.0" HBox.hgrow="ALWAYS">
               <children>
                  <Label style="-fx-font-weight: bold;" text="Môn ĐÃ đăng ký:" />
                  <ListView fx:id="lvRegisteredCourses" VBox.vgrow="ALWAYS" />
               </children>
            </VBox>
         </children>
         <padding>
            <Insets bottom="10.0" left="15.0" right="15.0" top="5.0" />
         </padding>
      </HBox>
   </center>
   <bottom>
      <Label fx:id="lblStatus" alignment="CENTER" managed="false" maxWidth="1.7976931348623157E308" styleClass="status-label-error" text="Status" visible="false" BorderPane.alignment="CENTER">
         <padding>
            <Insets bottom="10.0" top="5.0" />
         </padding>
      </Label>
   </bottom>
</BorderPane>