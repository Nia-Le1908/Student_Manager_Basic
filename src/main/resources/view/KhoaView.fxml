<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane stylesheets="@/view/styles.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.KhoaController">
    <top>
        <Label styleClass="title-label" text="QUẢN LÝ KHOA" BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets bottom="10.0" top="10.0" />
            </BorderPane.margin>
        </Label>
    </top>
    <center>
        <VBox spacing="15">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="10.0" />
            </padding>
            <HBox alignment="CENTER_LEFT" spacing="10">
                <children>
                    <Label text="Mã Khoa:" />
                    <TextField fx:id="tfMaKhoa" promptText="VD: CNTT" />
                    <Label text="Tên Khoa:" />
                    <TextField fx:id="tfTenKhoa" prefWidth="300.0" promptText="VD: Công nghệ Thông tin" />
                </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" spacing="10">
                <children>
                    <Button onAction="#handleThem" styleClass="action-button" text="Thêm" />
                    <Button onAction="#handleSua" styleClass="action-button" text="Sửa" />
                    <Button onAction="#handleXoa" styleClass="action-button" text="Xóa" />
                    <Button onAction="#handleLamMoi" styleClass="action-button" text="Làm Mới" />
                </children>
            </HBox>
             <Label fx:id="lblStatus" styleClass="status-label" />
            <TableView fx:id="tvKhoa" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colMaKhoa" prefWidth="150.0" text="Mã Khoa" />
                    <TableColumn fx:id="colTenKhoa" prefWidth="400.0" text="Tên Khoa" />
                </columns>
            </TableView>
        </VBox>
    </center>
</BorderPane>
