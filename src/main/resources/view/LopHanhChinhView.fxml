<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane fx:id="rootPane" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.LopHanhChinhController">
    <children>
        <BorderPane>
            <top>
                <Label styleClass="title-label" text="QUẢN LÝ LỚP HÀNH CHÍNH" BorderPane.alignment="CENTER">
                    <padding><Insets bottom="10" top="10" /></padding>
                </Label>
            </top>
            <center>
                <VBox spacing="15">
                    <padding><Insets bottom="20" left="20" right="20" top="10" /></padding>
                    
                    <GridPane hgap="10" style="-fx-background-color: #ffffff; -fx-padding: 20; -fx-background-radius: 8; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.05), 5, 0, 0, 1);" vgap="15">
                        <columnConstraints>
                            <ColumnConstraints halignment="RIGHT" minWidth="80" />
                            <ColumnConstraints hgrow="ALWAYS" />
                            <ColumnConstraints halignment="RIGHT" minWidth="80" />
                            <ColumnConstraints hgrow="ALWAYS" />
                        </columnConstraints>
                        <rowConstraints>
                            <RowConstraints />
                            <RowConstraints />
                            <RowConstraints />
                        </rowConstraints>
                        
                        <Label text="Mã Lớp (*):" />
                        <TextField fx:id="tfMaLop" promptText="VD: CNTT1-K17" GridPane.columnIndex="1" />
                        
                        <Label text="Tên Lớp:" GridPane.columnIndex="2" />
                        <TextField fx:id="tfTenLop" promptText="VD: Công nghệ phần mềm K17" GridPane.columnIndex="3" />
                        
                        <Label text="Khoa:" GridPane.rowIndex="1" />
                        <ComboBox fx:id="cbKhoa" maxWidth="Infinity" promptText="Chọn Khoa..." GridPane.columnIndex="1" GridPane.rowIndex="1" />
                        
                        <Label text="Khóa Học:" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                        <TextField fx:id="tfKhoaHoc" promptText="VD: 2024" GridPane.columnIndex="3" GridPane.rowIndex="1" />
                        
                        <HBox spacing="10" GridPane.columnIndex="1" GridPane.columnSpan="3" GridPane.rowIndex="2">
                            <Button onAction="#handleThem" styleClass="button-primary" text="Thêm Mới" />
                            <Button onAction="#handleSua" styleClass="action-button" text="Cập Nhật" />
                            <Button onAction="#handleXoa" styleClass="button-danger" text="Xóa" />
                            <Button onAction="#handleLamMoi" text="Làm Mới" />
                        </HBox>
                    </GridPane>
                    
                    <Label fx:id="lblStatus" managed="false" styleClass="status-label-error" visible="false" />

                    <TableView fx:id="tableLop" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="colMaLop" prefWidth="120" text="Mã Lớp" />
                            <TableColumn fx:id="colTenLop" prefWidth="250" text="Tên Lớp" />
                            <TableColumn fx:id="colKhoa" prefWidth="200" text="Khoa" />
                            <TableColumn fx:id="colKhoaHoc" prefWidth="100" style="-fx-alignment: CENTER;" text="Khóa" />
                        </columns>
                        <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY" /></columnResizePolicy>
                    </TableView>
                </VBox>
            </center>
        </BorderPane>
    </children>
</StackPane>