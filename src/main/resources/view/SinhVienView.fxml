<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<BorderPane stylesheets="@styles.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.SinhVienController">

    <top>
        <Label styleClass="title-label" text="QUẢN LÝ SINH VIÊN" BorderPane.alignment="CENTER" />
    </top>

    <center>
        <VBox spacing="15">
            <padding>
                <Insets bottom="15" left="15" right="15" top="15" />
            </padding>

            <!-- Form Inputs using GridPane -->
            <GridPane hgap="10.0" vgap="10.0">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="150.0" />
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="150.0" />
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="150.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                   <!-- Row 1 -->
                  <Label text="Mã SV (*):" GridPane.halignment="RIGHT" />
                  <TextField fx:id="tfMaSV" GridPane.columnIndex="1" />
                  <Label text="Họ tên (*):" GridPane.columnIndex="2" GridPane.halignment="RIGHT" />
                  <TextField fx:id="tfHoTen" GridPane.columnIndex="3" />
                  <Label text="Ngày sinh:" GridPane.columnIndex="4" GridPane.halignment="RIGHT" />
                  <DatePicker fx:id="dpNgaySinh" prefWidth="150.0" GridPane.columnIndex="5" />
                   <!-- Row 2 -->
                  <Label text="Giới tính:" GridPane.halignment="RIGHT" GridPane.rowIndex="1" />
                  <ComboBox fx:id="cbGioiTinh" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                  <Label text="Quê quán:" GridPane.columnIndex="2" GridPane.halignment="RIGHT" GridPane.rowIndex="1" />
                  <TextField fx:id="tfQueQuan" GridPane.columnIndex="3" GridPane.rowIndex="1" />
                  <Label text="Khoa (*):" GridPane.columnIndex="4" GridPane.halignment="RIGHT" GridPane.rowIndex="1" />
                  <ComboBox fx:id="cbKhoa" prefWidth="150.0" GridPane.columnIndex="5" GridPane.rowIndex="1" />
                   <!-- Row 3 -->
                   <Label text="Lớp:" GridPane.halignment="RIGHT" GridPane.rowIndex="2" />
                   <TextField fx:id="tfLop" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                   
                   <!-- Phần quản lý tài khoản (Chỉ hiện với Admin) -->
                  <Label fx:id="lblUsername" text="Tên đăng nhập:" GridPane.columnIndex="2" GridPane.halignment="RIGHT" GridPane.rowIndex="2" />
                  <TextField fx:id="tfUsername" disable="true" promptText="(Chọn SV để quản lý TK)" GridPane.columnIndex="3" GridPane.rowIndex="2" />
                   <Label fx:id="lblPassword" text="Mật khẩu mới:" GridPane.columnIndex="4" GridPane.halignment="RIGHT" GridPane.rowIndex="2" />
                   <PasswordField fx:id="pfPassword" disable="true" promptText="(Để trống nếu không đổi)" GridPane.columnIndex="5" GridPane.rowIndex="2" />
                    <!-- Row 4 -->
                   <Button fx:id="btnCreateUpdateAccount" disable="true" mnemonicParsing="false" onAction="#handleCreateUpdateAccount" text="Tạo/Reset TK" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                   <Label fx:id="lblAccountStatus" GridPane.columnIndex="2" GridPane.columnSpan="4" GridPane.rowIndex="3" />
               </children>
            </GridPane>


            <!-- Action Buttons and Search -->
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Button fx:id="btnThem" onAction="#themSinhVien" text="Thêm SV" />
                <Button fx:id="btnSua" onAction="#suaSinhVien" text="Sửa SV" />
                <Button fx:id="btnXoa" onAction="#xoaSinhVien" text="Xóa SV" />
                <Button onAction="#clearForm" text="Làm mới" />
                
                <!-- Import/Export Excel -->
                <Button onAction="#handleExportExcel" text="Xuất Excel" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold;"/>
                <!-- Thêm fx:id cho nút Nhập Excel để ẩn đi -->
                <Button fx:id="btnImportExcel" onAction="#handleImportExcel" text="Nhập Excel" style="-fx-background-color: #e67e22; -fx-text-fill: white; -fx-font-weight: bold;"/>
                
                <Region HBox.hgrow="ALWAYS" /> <!-- Spacer -->
                
                <!-- ComboBox Lọc Lớp -->
                <ComboBox fx:id="cbLopLoc" prefWidth="150.0" promptText="Lọc theo lớp" />
                
                <TextField fx:id="tfTimKiem" promptText="Tìm mã hoặc tên..." />
                <Button onAction="#timSinhVien" text="Tìm kiếm" />
            </HBox>

            <!-- Status Label -->
            <Label fx:id="lblStatus" managed="false" visible="false" />

            <!-- Student Table -->
            <TableView fx:id="tableSV" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colMaSV" prefWidth="100.0" text="Mã SV" />
                    <TableColumn fx:id="colHoTen" prefWidth="160.0" text="Họ tên" />
                    <TableColumn fx:id="colNgaySinh" prefWidth="120.0" text="Ngày sinh" />
                    <TableColumn fx:id="colGioiTinh" prefWidth="70.0" text="Giới tính" />
                    <TableColumn fx:id="colQueQuan" prefWidth="150.0" text="Quê quán" />
                    <TableColumn fx:id="colKhoa" prefWidth="150.0" text="Khoa" />
                    <TableColumn fx:id="colLop" prefWidth="100.0" text="Lớp" />
                    <TableColumn fx:id="colDiemTichLuy" prefWidth="100.0" text="Điểm TL (Hệ 4)" />
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>
        </VBox>
    </center>
</BorderPane>